<!DOCTYPE html>
<html>
<head>
    <title>Social Recipe</title>
    <% include parts/headers.ejs %>

    <script>
        const name = "recipe_name";
        const id = "id_recipe";
        const id_field = "id-recipe";
        const quantity = "servings"
    </script>

</head>
<body>

    <% include parts/toolbar.ejs %>

    <div class="container">
        <div class="row col-md-8 col-md-offset-2">
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-addon glyphicon glyphicon-search search" id="search-addon"></span>
                    <input id="search_name" type="text" class="form-control" placeholder="Search" aria-describedby="search-addon" oninput="search_value('recipe_name', this.value, 'id-recipe', 'id_recipe');">
                </div>
            </div>
            <div class="col-md-5">
                <div class="input-group">
                    <div class="input-group-btn">
                        <button id="number-addon" type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <span class="glyphicon glyphicon-cutlery"></span>
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu" id="servings-list">
                            <li id-selection="1"><a href="#">Only this exact quantity</a></li>
                            <li id-selection="2"><a href="#">Less or equal to</a></li>
                            <li id-selection="3"><a href="#">More or equal to</a></li>
                        </ul>
                    </div><!-- /btn-group -->
                    <input id="search_servings" type="number" class="form-control" placeholder="servings ..." aria-describedby="number-addon">
                </div>
            </div>
        </div>

        <div class="row center">
            <% for(let i=0;i<rows.length;i++){ %>
            <div id-recipe="<%= rows[i]['id_recipe'] %>" class="col-sm-5 col-md-3 format-size">
                <div class="thumbnail">
                    <img src="images/recipe_default.jpg" alt="...">
                    <div class="caption">
                        <h3><%= rows[i]['recipe_name'] %></h3>
                        <p>SOME TEXT</p>
                        <div style="text-align:center;width:100%;">
                            <p><a href="/recipe?id=<%= rows[i]['id_recipe'] %>" class="btn btn-primary" role="button">See more</a></p>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
        </div>
    </div>

</body>
<script src="javascripts/search.js"></script>


</html>