<!DOCTYPE html>
<html>
<head>
    <title>Social Recipe</title>
    <% include parts/headers.ejs %>

</head>
<body>

    <% include parts/toolbar.ejs %>

    <div class="container">
        <div id="search" class="input-group">
            <span class="input-group-addon glyphicon glyphicon-search" id="search-addon"></span>
            <input type="text" class="form-control" placeholder="Search" aria-describedby="search-addon" oninput="search_value('recipe_name', this.value, 'id-recipe', 'id_recipe');">
        </div>

        <div class="row center">
            <% for(let i=0;i<rows.length;i++){ %>
            <div id-recipe="<%= rows[i]['id_recipe'] %>" class="col-sm-5 col-md-3 format-size">
                <div class="thumbnail">
                    <img src="images/recipe_default.jpg" alt="...">
                    <div class="caption">
                        <h3><%= rows[i]['recipe_name'] %></h3>
                        <p>SOME TEXT</p>
                        <div style="text-align:center;width:100%;">
                            <p><a href="/recipe?id=<%= rows[i]['id_recipe'] %>" class="btn btn-primary" role="button">See more</a></p>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
        </div>
    </div>

</body>


</html>