<!DOCTYPE html>
<html>
<head>
    <title>Social Recipe</title>

    <% include ../parts/headers.ejs %>

</head>
<body>

<% include ../parts/toolbar.ejs %>

<div class="container">
    <div class="jumbotron">
        <h2>Recipes rankings</h2>
        <p>Here are categories ranked by the quantity of recipes created since the beginning of a year</p>
    </div>

    <div class="col-md-6 col-md-offset-3">
        <div class="row">
            <form action="/stats" method="get">
                <div class="col-md-8 col-md-offset-2">
                    <div class="form-group">
                        <label for="date-select">Give a year : </label>
                        <div class="input-group">
                            <input id="date-select" class="form-control" type="number" min="1950" value="<%= date %>"
                                   placeholder="Give a year ..." name="date">
                            <span class="input-group-btn">
                                <button type="submit" class="btn btn-default">Reload</button>
                            </span>
                        </div>
                        <input type="text" value="true" name="categories" style="display:none;">
                    </div>
                </div>
            </form>
        </div>
        <ul class="list-group">
            <% for(var i = 0;i < rows.length;i++){ %>
            <li class="list-group-item">
                <%= rows[i]["category_name"] %>
                <span class="badge"><%= rows[i]["quantity"] %></span>
            </li>
            <% } %>
        </ul>
    </div>
</div>

</body>
</html>
